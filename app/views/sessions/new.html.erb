<h1>Login</h1>
<% if flash[:alert]%>
    <p id="notice"><%= flash[:alert]%></p>
<% end %>
<%= form_tag '/login' do %>
    Email: <%= text_field_tag :email %>
    Password: <%= password_field_tag :password %>
    <%= submit_tag "Submit" %>
    <%= link_to 'New Customer', new_customer_path %>
<% end %>

