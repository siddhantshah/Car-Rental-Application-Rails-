    <%= form.text_field :manufacturer, id: :suggestion_manufacturer %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model, id: :suggestion_model %>
  </div>

  <div class="field">
    <%= form.label :style %>
