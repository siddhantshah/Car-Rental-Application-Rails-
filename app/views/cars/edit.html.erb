<h1>Editing Car</h1>

<!--<= render 'form', car: @car %>-->

<%= form_with(model: @car, local: true) do |form| %>
    <% if @car.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

          <ul>
            <% @car.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= form.label :license %>
      <%= form.text_field :license, id: :car_license %>
    </div>

    <div class="field">
      <%= form.label :manufacturer %>
      <%= form.text_field :manufacturer, id: :car_manufacturer %>
    </div>

    <div class="field">
      <%= form.label :model %>
      <%= form.text_field :model, id: :car_model %>
    </div>

    <div class="field">
      <%= form.label :rate %>
      <%= form.text_field :rate, id: :car_rate %>
    </div>

    <div class="field">
      <%= form.label :style %>
      <%= form.text_field :style, id: :car_style %>
    </div>

    <div class="field">
      <%= form.label :location %>
      <%= form.text_field :location, id: :car_location %>
    </div>

    <div class="field">
      <%= form.label :status %>
      <%= form.select :status, ['Available', 'Reserved', 'Checked out'], id: :car_status%>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>

<%= link_to 'Back', cars_path %>
